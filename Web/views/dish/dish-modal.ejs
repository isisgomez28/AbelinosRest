<div class="modal fade dish-modal" id="<%= target %>" tabindex="-1" role="dialog" aria-labelledby="<%= target %>Label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form method="post" action="<%= url%>" enctype="multipart/form-data" data-toggle="validator" novalidate>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title" id="<%= target %>Label">
            <%= title %>
          </h4>
        </div>
        <div class="modal-body">
          <!--Formulario-->
          <input type="hidden" name="_csrf" value="<%= _csrf%>">
          <input type="hidden" class="<%= type %>-id" name="id">
          <div class="form-group">
            <div class="row">     
              <!--Columna de la izquierda-->
              <div class="col-md-5">

                <div class="form-group">
                  <label for="<%= type %>-name">Nombre</label>
                  <input type="text" class="form-control <%= type %>-name" id="<%= type %>-name" name="name" required data-error="Debe ingresar un nombre">
                  <div class="help-block with-errors"></div>
                </div>

                <div class="form-group">
                  <label for="<%= type %>-dish-type">Tipo de Plato</label>
                  <select name="type" id="<%= type %>-dish-type">
                    <option value="appetizer">Entrada</option>
                    <option value="salads">Ensalada</option>
                    <option value="maindish">Plato principal</option>
                    <option value="dessert">Postre</option>
                  </select>
                  <div class="help-block with-errors"></div>
                </div>

                <div class="form-group">
                  <label for="<%= type %>-price">Precio</label>
                  <input type="text" class="form-control <%= type %>-price" id="<%= type %>-price" name="price" required pattern="^\d+(.\d{1,2})?$" data-error="Debe ingresar un precio valido">
                  <div class="help-block with-errors"></div>
                </div>
              </div>
              <!--Columna de la derecha-->
              <div class="col-md-5">
                <div class="form-group">
                  <img class="dish-img mb10 <%= type %>-img" src="/images/logo.png" alt="<%= title %>">
                  <input type="file" name="file" class="dish-img-input">
                  <div class="help-block with-errors dish-img-error error-color"></div>
                </div>        
              </div>

              <div class="col-md-12">
                <div class="form-group">
                  <label for="<%= type %>-description">Descripcion</label>
                  <input type="text" class="form-control <%= type %>-description" id="<%= type %>-description" name="description" required data-error="Debe ingresar una descripcion">
                  <div class="help-block with-errors"></div>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <label for="<%= type %>-specialty">Especialidad</label>
                  <input type="checkbox" class="form-control <%= type %>-specialty" id="<%= type %>-specialty" name="specialty">
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="<%= type %>-chef-favorite">Favorito del chef</label>
                  <input type="checkbox" class="form-control <%= type %>-chef-favorite" id="<%= type %>-chef-favorite" name="chefFavorite">
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-primary"><%= actionType %></button>
        </div>
      </form> 
    </div>     
  </div>
</div>