<section class="container" id="menu-section">
	<form action="/order/new" method="GET" data-toggle="validator">
		<div class="row">
			<div class="col-md-7 box container">
				<!-- Formulario para rellenar datos de la orden -->
				<div class="form-group">
					<label for="card">Numero de tarjeta</label>
					<input type="text" class="form-control" name="card" id="card" placeholder="Numero de Tarjeta" data-error="Numero invalido de tarjeta" data-fv-regexp-regexp="[0-9]{16}" required>
					<div class="help-block with-errors"></div>
				</div>
				<div class="form-group">
					<label for="clientID">Cedula</label>
					<input type="text" data-minlength="11" class="form-control" name="clientID" placeholder="Cedula" data-error="Cedula invalida" data-fv-regexp-regexp="[0-9]{11}" id="clientID" required>
					<div class="help-block with-errors"></div>
				</div>
				<div class="form-group">
					<label for="telephone">Telefono</label>
					<input type="text" class="form-control" name="telephone" placeholder="Telefono para contactar" data-error="Telefono invalido" id="telephone" required>
					<div class="help-block with-errors"></div>
				</div>
				<div class="form-group">
					<label for="inputEmail">Correo Electronico</label>
					<input type="email" class="form-control" id="inputEmail" name="email" placeholder="Correo Electronico del Usuario" data-error="El correo electronico no valido." required>
					<div class="help-block with-errors"></div>
				</div>
				<div class="form-group">
					<label for="address">Direccion</label>
					<input type="text" class="form-control" name="address" id="address" placeholder="Direccion a enviar la orden" data-error="Direccion invalida." required>
					<div class="help-block with-errors"></div>
				</div>
				<div class="form-group">
					<label for="localorder">Deseo buscar la orden en el establecimiento</label>
					<input type="checkbox" value="false" name="localorder" id="localorder" >
				</div>
				<button type="submit" class="btn btn-primary btn-md pull-right" value="New order">Ordenar</button>
			</div>
			<!--Datos de la orden-->
			<div class="col-md-4 box mt10 container col-md-offset-1" id="menu-order-box">
				<h3>Orden</h3>
				<ul class="list-group menu-order">
					<% var price = 0 %>
					<%  _.each(dishes, function (dish) { %>
					<% 	if(duplicated[dish.id] != undefined){ %>
					<%for(k = 1; k<duplicated[dish.id]; k ++){%>
					<li class="list-group-item" value='<%=dish.price%>'><%=dish.name%>
						<input type="hidden" name="dish" value="<%=dish.id%>">
						<button class="btn btn-xs btn-danger glyphicon glyphicon-minus pull-right menu-delete"></button>
					</li>
					<%  price = price + dish.price %>
					<% } %>
					<%}%>
					<li class="list-group-item" value='<%=dish.price%>'><%=dish.name%>
						<input type="hidden" name="dish" value="<%=dish.id%>">
						<button class="btn btn-xs btn-danger glyphicon glyphicon-minus pull-right menu-delete"></button>
					</li>
					<%  price = price + dish.price %>
					<% }) %>
				</ul>
				<p class="pull-left">Total: $<span id="total-price"><%=price%></span></p>
			</div>
		</div>
	</form>
</section>