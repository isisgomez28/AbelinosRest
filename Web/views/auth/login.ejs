<% if(typeof message !== 'undefined'){ %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="alert alert-danger" role="alert">
        <%= message %>
      </div>
    </div>
  </div>
<% } %>
<div class="col-md-4 col-md-offset-4 box">
  <form action="/login" method="POST" data-toggle="validator">
    <input type='hidden' name='_csrf' value='<%= _csrf %>'>
    <div class="form-group">
      <label>Usuario</label>
      <input type="text" class="form-control" name="username" data-minlength="5" data-fv-regexp-regexp="^[\w]*$" data-error="La cuenta de usuario solo permite caracteres alfanumericos y raya baja." required>
      <div class="help-block with-errors"></div>
    </div>
    <div class="form-group">
      <label>Contrase√±a</label>
      <input type="password" class="form-control" name="password" required>
    </div>
    <a href="/forgotPassword" class="pull-left mt10">Recuperar cuenta</a>
    <button type="submit" class="btn btn-primary pull-right">Ingresar</button>
  </form>
</div>