<div class="row">
	<div class="col-md-4 col-md-offset-4 box">
		<form action="/forgotPassword" method="POST">
			<div class="control-group">
				<label for="email">Correo Electronico asociado a Cuenta de Acceso</label>
				<input type="email" class="form-control" name="email" id="email" placeholder="Correo Electronico" required>
				<input type="hidden" name="_csrf" value="<%= _csrf%>">
			</div>
			<br>
			<button type="submit" class="btn btn-primary btn-md pull-right" value="Password Recovery">Recuperar</button>
		</form>
	</div>
</div>